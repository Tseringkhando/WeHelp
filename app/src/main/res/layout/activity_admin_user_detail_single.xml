        android:layout_marginTop="24dp"
        android:fontFamily="@font/arimo"
        android:text="Tsering Khando Lama"
        android:textColor="#454040"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender_view" />

    <ImageView
        android:id="@+id/profileimage_view"
        android:layout_width="204dp"
        android:layout_height="183dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datejoin_view"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textAllCaps="false"
        android:id="@+id/btn_view_userposts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/arimo_bold"
        android:text="View posts"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileimage_view" />

