<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminDashboard">

    <TextView
        android:id="@+id/bg_dashboard"
        android:layout_width="0dp"
        android:layout_height="235dp"
        android:background="#0099FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dasboard_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Dashboard"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/bg_dashboard"
        app:layout_constraintTop_toTopOf="@+id/bg_dashboard" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/default_profile_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg_dashboard" />

    <TextView
        android:id="@+id/admin_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="Tsering Khando"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView" />

    <GridLayout
        android:layout_width="370dp"
        android:layout_height="527dp"
        android:layout_gravity="center"
        android:layout_marginTop="176dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:orientation="horizontal"
        android:rowCount="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginStart="5dp"
            android:background="@drawable/cardbg" />

        <TextView
            android:id="@+id/textView12"

            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/cardbg" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginStart="5dp"
            android:background="@drawable/cardbg" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/cardbg" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginStart="5dp"
            android:background="@drawable/cardbg" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginStart="5dp"
            android:background="@drawable/cardbg" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>